{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src", "build"],
  "exclude": ["node_modules"]
}
